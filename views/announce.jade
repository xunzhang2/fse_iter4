extends layout

block content
  include navigator
  header#top.header
    .text-vertical-center
      .list-group(style='width:50%; margin:auto')
        h1 Announcements
        br

        ul#messagelist
          for msg in result
            li.btn.btn-dark.btn-lg.home-items=msg.username
            li.btn.btn-dark.btn-lg.home-items=msg.message
            li.btn.btn-dark.btn-lg.home-items=msg.timestamp
        br
        
        form#chatpage(style='width: 50%; margin: auto')
          fieldset.form-group
            label Input your messages here :)
            input.form-control(id='messages', type='text', placeholder='Messages')
          button.btn.btn-primary(type='submit') SEND


  script(src='js/cookies.js')
  script(src='http://code.jquery.com/jquery-1.11.1.js')
  script(src='/socket.io/socket.io.js')
  script(src='js/announce.js')
